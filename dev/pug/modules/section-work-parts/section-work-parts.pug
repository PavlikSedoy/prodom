section.work-parts
  .container
    //- Heading
    h2 Порядок работы

    //- Content
    if pageClass == 'construction-design'
      .row.work-parts__row
        .work-parts__item
          .work-parts__item_square
            img(src="./static/images/services-building-page/work-parts/1.svg", alt="Alt")
          span.work-parts__item_title Создание проектной <br> концепции и подготовка <br> исходно-разрешительной <br> документации
        .work-parts__item
          .work-parts__item_square
            img(src="./static/images/services-building-page/work-parts/2.svg", alt="Alt")
          span.work-parts__item_title Разработка проекта <br> на этапе предпроектной <br> документации
        .work-parts__item
          .work-parts__item_square
            img(src="./static/images/services-building-page/work-parts/3.svg", alt="Alt")
          span.work-parts__item_title Утверждение всех <br> подготовленных <br> проектных решений 
        .work-parts__item
          .work-parts__item_square
            img(src="./static/images/services-building-page/work-parts/4.svg", alt="Alt")
          span.work-parts__item_title Осуществление <br> экспертизы  <br> и ведение авторского <br> надзора
    else
      .row.work-parts__row
        .work-parts__item
          .work-parts__item_square
            img(src="./static/images/services-building-page/work-parts/1.svg", alt="Alt")
          span.work-parts__item_title Составление сметы <br> и подписание договора
        .work-parts__item
          .work-parts__item_square
            img(src="./static/images/services-building-page/work-parts/2.svg", alt="Alt")
          span.work-parts__item_title Привлечение  <br> суб-подрядчиков <br> и подготовка
        .work-parts__item
          .work-parts__item_square
            img(src="./static/images/services-building-page/work-parts/3.svg", alt="Alt")
          span.work-parts__item_title Реализация <br> строительных <br> работ
        .work-parts__item
          .work-parts__item_square
            img(src="./static/images/services-building-page/work-parts/4.svg", alt="Alt")
          span.work-parts__item_title Сдача объекта <br> заказчику

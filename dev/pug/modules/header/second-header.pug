header.second-header(style=headerImgPath)
  .darken-layer

  .container.second-header__container
    //- Header content
    .second-header__content
      span.second-header__page-type #{pageType}
      //- Header title
      if pageClass == 'current-project-page'
        h1.current-project #{title}
      else
        h1 #{title}
      //- Page desctiption in header
      if pageClass !== 'current-project-page'
        p.second-header__desc #{desc}
      //- Breadcrumb
      ul.second-header__breadcrumb
        li
          a(href=breadcrumbLink1) #{breadcrumb1}
        li
          a(href=breadcrumbLink2) #{breadcrumb2}
        if breadcrumb3
          li
            a(href=breadcrumbLink3) #{breadcrumb3}

    if requstBlock !== 'false'
      //- Header request block
      .second-header__request-block
        include ../header-request-block/header-request-block.pug